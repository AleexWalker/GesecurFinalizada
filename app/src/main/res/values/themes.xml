<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Gesecur" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--        <item name="colorPrimaryVariant">@color/</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorSecondary">@color/primary</item>
<!--        <item name="colorSecondaryVariant">@color/</item>-->
<!--        <item name="colorOnSecondary">@color/white</item>-->
<!--        <item name="fontFamily">@font/sfp_regular</item>-->
        <item name="colorOnSurface">@color/gray</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <item name="android:windowBackground">#f0f0f0</item>

    </style>

    <style name="Theme.Gesecur.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Gesecur.Dialog">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="Theme.Gesecur.Tab" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnSurface">@color/gray</item>

    </style>

    <style name="dialogTheme" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="textAppearanceBody1">@style/Text.S2.Black</item>
        <item name="android:textAppearanceButton">@style/Text.S2.Black</item>
        <item name="textAppearanceSubtitle1">@style/Text.S2.Black</item>
        <item name="textAppearanceSubtitle2">@style/Text.S2</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

</resources>